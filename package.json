{
  "private": true,
  "scripts": {
    "build:apps": "turbo build --filter='./apps/*'",
    "build:packages": "turbo build --filter='./packages/*'",
    "build:all": "turbo build --filter='*'",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
